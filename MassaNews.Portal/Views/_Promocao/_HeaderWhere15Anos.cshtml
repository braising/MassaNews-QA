      <p>Inscrições abertas de 14 a 28 de novembro.</p>
      <p>Participe, chame seus amigos!</p>
      @if (ViewBag.ConcursoAberto){
        <a href="/promocao/where-15-anos/enviar" class="c-button--white c-button--small" title="Envie sua foto"><i class="fa fa-image"></i>&nbsp;&nbsp; Envie sua foto</a>
      } else {
        <h2>Votação encerrada!</h2>
      }
    </div>
  </div>
