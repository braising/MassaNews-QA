@section bodyClass{@Html.Raw("pg-esportes tabela-facil")}

<main class="g-main">
    <div class="t-content g-container">
        <section class="t-module">
            <h2 class="t-page-color h2">Classificação por Grupos</h2>
            <div class="table-rounds">
                <div class="c-slider--table c-slider--table-brasileirao-a">
                    @{ var j = 1; }
                    @foreach (var classificacao in ViewBag.LstClassificacao)
                    {
                        <div class="group-table" id="table-results-@j">
                            <h4 class="title t-page-color">Grupo @(j)</h4>
                            @Html.Raw(classificacao)
                        </div>
                        j++;
                    }
                </div>
            </div>
        </section>
        <section class="t-module">
            <h2 class="t-page-color h2">Jogos</h2>
            <div class="table-rounds">
                <div class="c-slider--table c-slider--table-brasileirao-b">
                    @{ var i = 1; }
                    @foreach (var rodada in ViewBag.LstRodadas)
                    {
                        <div class="group-table" id="table-results-@i">
                            <h4 class="title t-page-color">@(i)ª rodada</h4>
                            @Html.Raw(rodada)
                        </div>
                        i++;
                    }
                </div>
            </div>
            <div class="credito">
                <a href="//www.tabelafacil.com" class="logo-tabela-facil" target="_blank" rel="nofollow" title="Por: Tabela Fácil">
                    <img src="@Url.Content("~/content/images/logos/tabela-facil.gif")" alt="Tabela Fácil - Agência de Resultados Esportivos">
                </a>
            </div>
        </section>
        <div class="group-button">
            <a href="/tags/libertadores" class="c-button t-page-button" title="Tudo sobre a Libertadores">Tudo sobre a Libertadores</a>
        </div>
    </div>
</main>