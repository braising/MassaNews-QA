        @if (!string.IsNullOrEmpty(Model.Telefone))
        {
          <div class="row">
            <div class="column-title">
              <h3>Telefone</h3>
            </div>
            @foreach (var item in Model.Telefone.Split(',').ToList())
            {
              <div class="column-detail">
                <p>@item</p>
              </div>
            }
          </div>
          <hr>
        }
        @if (!string.IsNullOrEmpty(@Model.Site))
        {
          <div class="row">
            <div class="column-title">
