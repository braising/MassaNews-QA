              </p>
            </div>
          </div>
          <hr>
        }
        @if (!string.IsNullOrEmpty(@Model.Email))
        {
          <div class="row">
            <div class="column-title">
              <h3>E-mail</h3>
            </div>
            <div class="column-detail">
              <p><a href="mailto:@Model.Email">@Model.Email</a>
              </p>
            </div>
          </div>
          <hr>
        }
        @if (!string.IsNullOrEmpty(Model.Facebook) || !string.IsNullOrEmpty(Model.Twitter) || !string.IsNullOrEmpty(Model.Instagran))
        {
          <div class="row">
            <div class="column-title">
              <h3>Redes Sociais</h3>
            </div>
            <div class="column-detail">
              @if (!string.IsNullOrEmpty(Model.Facebook))
              {
                <a href="@Model.Facebook" class="c-share__link" target="_blank" title="Facebook">
                  <span class="fa-stack">
                <i class="fa fa-circle fa-stack-2x"></i>
                <i class="fa fa-facebook fa-stack-1x fa-inverse"></i>
              </span>
                </a>
              }
              @if (!string.IsNullOrEmpty(Model.Twitter))
              {
                <a href="@Model.Twitter" class="c-share__link" target="_blank" title="Twitter">
                  <span class="fa-stack">
                <i class="fa fa-circle fa-stack-2x"></i>
                <i class="fa fa-twitter fa-stack-1x fa-inverse"></i>
              </span>
                </a>
              }
              @if (!string.IsNullOrEmpty(Model.Instagran))
              {
                <a href="@Model.Instagran" class="c-share__link" target="_blank" title="Instagran">
                  <span class="fa-stack">
                            <i class="fa fa-circle fa-stack-2x"></i>
                            <i class="fa fa-instagram fa-stack-1x fa-inverse"></i>
                          </span>
                </a>
              }
            </div>
          </div>
          <hr>
        }
        @if (!string.IsNullOrEmpty(@Model.FormasDePagamento))
        {
          <div class="row">
            <div class="column-title">
              <h3>Formas de pagamento</h3>
            </div>
            <div class="column-detail">
              <p>@Model.FormasDePagamento</p>
            </div>
          </div>
          <hr>
        }
        @if (Model.Conveniencias.Any())
        {
          <div class="row">
            <div class="column-title">
              <h3>Conveniências</h3>
            </div>
            <div class="column-detail">
              <ul>
                @foreach (var item in Model.Conveniencias)
                {
                  <li>@item.Nome</li>
                }
              </ul>
            </div>
          </div>
          <hr>
        }
        @if (!string.IsNullOrEmpty(@Model.Estacionamento))
        {

          <div class="row">
            <div class="column-title">
              <h3>Estacionamento</h3>
            </div>
            <div class="column-detail">
              <p>@Model.Estacionamento</p>
            </div>
          </div>
          <hr>
        }
        @if (!string.IsNullOrEmpty(@Model.Endereco))
        {
          <div class="row">
            <div class="column-title">
              <h3>Endereço</h3>
            </div>
            <div class="column-detail">
              <p>@Model.Endereco</p>
            </div>

            <div class="map">
              <iframe src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCtSbkmc7h_UEuKrXt7plmjF3wHLiQnDUY&q=@(HttpUtility.UrlEncode($"{Model.Titulo},{Model.Endereco}"))" width="100%" height="300" frameborder="0" style="border: 0" allowfullscreen></iframe>
            </div>
          </div>
        }
      </div>
    </div>
